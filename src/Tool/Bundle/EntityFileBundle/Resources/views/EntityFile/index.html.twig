{% extends '::base.html.twig' %}

{% block body -%}
    <h1>EntityFile list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Namefile</th>
                <th>Shortdescription</th>
                <th>Description</th>
                <th>Updateat</th>
                <th>Deleted</th>
                <th>Deletedat</th>
                <th>Uploadedfromuser</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('entityfile_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nameFile }}</td>
                <td>{{ entity.shortDescription }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.updateAt %}{{ entity.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.deleted }}</td>
                <td>{% if entity.deletedAt %}{{ entity.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.uploadedFromUser }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('entityfile_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('entityfile_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('entityfile_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
